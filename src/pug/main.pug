        -
          var tabLinkNames = ['All', 'Web Design',
          'Web Development', 'Branding'];
        each val in tabLinkNames
          button.button.button--tab.tabs__button=val
      
      .cards-deck.row
        -
          var n = 0, imageNumber = 8, base = 'portfolio_0';
        while ++n < (imageNumber + 1)
          - var imgSrc = './imgs/' + base + n + '.jpg';
          //- - var classname = 'cards-deck__item-' + n;
          .cards-deck__item
            img(src=imgSrc, width="600", height="420", alt="some stuff")
            
            .cards-deck__item-info.text-theme-image
              h4 Project title
              -
                var textValue = '';
                switch (n) {
                  case 1:
                  case 3:
                  case 4:
                  case 5:
                    textValue = 'Web Design';
                    break;
                  case 2:
                  case 6:
                    textValue = 'Web Development';
                    break;
                  case 7:
                    textValue = 'Web Development, Branding';
                    break;
                  case 8:
                    textValue = 'Branding';
                    break;
                  default:
                    break;
                }
              
              p=textValue
              
